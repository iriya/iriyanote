<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.google.code.iriyanote.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>newnote</servlet-name>
		<servlet-class>com.google.code.iriyanote.NoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>newnote</servlet-name>
		<url-pattern>/newnote</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>follow</servlet-name>
		<servlet-class>com.google.code.iriyanote.FollowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>follow</servlet-name>
		<url-pattern>/follow</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
